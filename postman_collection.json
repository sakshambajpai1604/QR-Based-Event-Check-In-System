{
  "info": {
    "name": "Event Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "event-api-collection-id"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": 200,
              "body": "{\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n  \"user\": {\n    \"id\": \"12345\",\n    \"email\": \"user@example.com\"\n  }\n}"
            },
            {
              "name": "Error",
              "status": 401,
              "body": "{\n  \"message\": \"Invalid email or password\"\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Event Management",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Tech Talk\",\n  \"description\": \"A talk on modern web development\",\n  \"location\": \"Auditorium\",\n  \"date\": \"2025-05-15\",\n  \"time\": \"10:00 AM\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/events/create",
              "host": ["{{base_url}}"],
              "path": ["api", "events", "create"]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": 201,
              "body": "{\n  \"message\": \"Event created successfully\"\n}"
            },
            {
              "name": "Error",
              "status": 500,
              "body": "{\n  \"message\": \"Server error\"\n}"
            }
          ]
        },
        {
          "name": "Register for Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{eventId}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/events/register",
              "host": ["{{base_url}}"],
              "path": ["api", "events", "register"]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": 201,
              "body": "{\n  \"message\": \"Registered successfully. QR code sent to email.\"\n}"
            },
            {
              "name": "Error",
              "status": 400,
              "body": "{\n  \"message\": \"Already registered\"\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Admin Views",
      "item": [
        {
          "name": "View Attendees",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/events/{{eventId}}/attendees",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "events", "{{eventId}}", "attendees"]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": 200,
              "body": "[\n  {\n    \"userId\": \"12345\",\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\"\n  }\n]"
            },
            {
              "name": "Error",
              "status": 404,
              "body": "{\n  \"message\": \"Event not found\"\n}"
            }
          ]
        },
        {
          "name": "Export Attendees CSV",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/events/{{eventId}}/export",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "events", "{{eventId}}", "export"]
            }
          }
        },
        {
          "name": "QR Code Check-in",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qrCodeData\": \"sample-encoded-user-id-or-token\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/checkin",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "checkin"]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": 200,
              "body": "{\n  \"message\": \"Check-in successful\",\n  \"attendee\": {\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\"\n  }\n}"
            },
            {
              "name": "Error",
              "status": 400,
              "body": "{\n  \"message\": \"Invalid QR code or already checked in\"\n}"
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "eventId",
      "value": ""
    }
  ]
}
